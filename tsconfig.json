{
  "exclude": [
    "build",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "scripts",
    "config"
  ],
  "include": ["src", "src/measures/*.json"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  }
}
